               <vcf:url>http://www.bayes.co.uk</vcf:url>
            </dc:creator>
            <dc:date>2001-06-26</dc:date>
            <dc:description>
               <html:div>
                  <html:p>Encodes a URI string.</html:p>
               </html:div>
            </dc:description>
         </rdf:Description>
      </exslt:revision>
      <exslt:revision>
